
mixin item(data)
  <td style="text-align: center; vertical-align: top; padding: 0 4px 30px;">
    <a href=!{data.link+global.utm} target="_blank" style="text-decoration: none; color: black;">
      <img border="0" style="display: block; width: 120px; margin: 0 auto 15px;" src=!{global.dateURL()+data.img} alt="">
      <p style="margin: 0 auto; font-size: 13px; text-align: center; width: 120px;">
      <span style="display: inline-block; margin: 10px 0 0; color: #000000;">!{data.type}</span><br>
        <span style="display: inline-block; margin-bottom: 5px; font-weight: bold;">!{data.brand}</span><br>
        if data.oldPrice
          <span><s>!{data.oldPrice+' р.'}</s>!{data.newPrice+' р.'}</span>
        else
          <span>!{data.newPrice+' р.'}</span>

      </p>
    </a>
  </td>
  
mixin itemOld(data)
  <td style="text-align: center; vertical-align: top; padding: 0 7px 30px;">
    <a href=!{data.link+global.utm} target="_blank" style="text-decoration: none; color: black;">
      <img border="0" style="display: block; width: 133px; margin: 0 auto 15px;" src=!{global.dateURL()+data.img} alt="">
      <p style="margin: 0 auto; font-size: 13px; text-align: center; width: 133px;">
        <span style="display: inline-block; margin-bottom: 5px; text-transform: uppercase;">!{data.brand}</span><br>
        <span style="display: inline-block; margin: 10px 0; color: #9b9b9b;">!{data.type}</span><br>
        if data.oldPrice
          <span><s>!{data.oldPrice+' р.'}</s> <b style="color: #f1084f;">!{data.newPrice+' р.'}</b></span>
        else
          <span><b style="color: #f1084f;">!{data.newPrice+' р.'}</b></span>

      </p>
    </a>
  </td>
  
mixin buy
  <table width="100%" cellpadding="0" cellspacing="0" border="0">
    <tr>
      <td>
        <a style="display: block; margin: 15px auto 30px; width: 174px; background: #ffffff; border: 1px solid #000000; color: #000000; height: 36px; font-size: 16px; text-decoration: none; line-height: 36px; text-align: center;" href=!{"https://monacomoda.com/"+global.utm} target="_blank">КУПИТЬ</a>
      </td>
    </tr>
  </table>
