
mixin itemRow(data, padding='padding: 0 4px 30px;', needPrice=true)
  <tr>
    <td style="vertical-align: middle; !{padding}">
      <a href="!{global.host + data.link + global.utm}" target="_blank" style="display:block; text-decoration: none; color: black;">
        <img border="0" style="display: inline-block; vertical-align: middle; width: 151px; margin: auto 30px auto 0;" src="!{global.dateURL()+data.img}" alt="">
        <p style="display: inline-block; vertical-align: middle; margin: auto 20px auto 0;; font-size: 24px; line-height: 24px; font-weight: bold; text-align: left; width: 250px;">
          <span style="display: inline-block; margin-bottom: 5px; text-decoration: underline; max-height: 121px; overflow: hidden;">!{data.brand}</span><br>
          <span style="display: inline-block; margin: 5px 0 0; color: #000000; text-decoration: underline;">!{data.color}</span>
        </p>
        if needPrice
          <p style="display: inline-block; vertical-align: middle; margin: auto; font-size: 24px; line-height: 24px; font-weight: bold; text-align: left; width: 200px;">
            if data.oldPrice
              <span><s>!{data.oldPrice+' р.'}</s>!{data.oldPrice+' р.'}</span>
            else
              <span><b>Цена </b><b style="color: #10b632;">!{data.newPrice+' р.'}</b></span>
          </p>
      </a>
    </td>
  </tr>


mixin item(data, padding='padding: 0 4px 30px;')
  <td style="text-align: center; vertical-align: top; !{padding}">
    <a href="!{global.host + data.link + global.utm}" target="_blank" style="text-decoration: none; color: black;">
      <img border="0" style="display: block; width: 151px; margin: 0 auto 15px;" src=!{global.dateURL()+data.img} alt="">
      <p style="margin: 0 auto; font-size: 14px; text-align: left; width: 151px;">
      <span style="display: inline-block; margin: 5px 0 0; color: #000000;">!{data.type}</span><br>
        <span style="display: inline-block; margin-bottom: 5px; font-weight: bold;">!{data.brand}</span><br>
        if data.oldPrice
          <span><s>!{data.oldPrice+' р.'}</s>!{data.oldPrice+' р.'}</span>
        else
          <span><b>Цена </b><b style="color: #10b632;">!{data.newPrice+' р.'}</b></span>

      </p>
    </a>
  </td>
  
mixin itemOld(data)
  <td style="text-align: center; vertical-align: top; padding: 0 7px 30px;">
    <a href=!{data.link+global.utm} target="_blank" style="text-decoration: none; color: black;">
      <img border="0" style="display: block; width: 133px; margin: 0 auto 15px;" src=!{global.dateURL()+data.img} alt="">
      <p style="margin: 0 auto; font-size: 13px; text-align: center; width: 133px;">
        <span style="display: inline-block; margin-bottom: 5px; text-transform: uppercase;">!{data.brand}</span><br>
        <span style="display: inline-block; margin: 10px 0; color: #9b9b9b;">!{data.type}</span><br>
        if data.oldPrice
          <span><s>!{data.oldPrice+' р.'}</s> <b style="color: #f1084f;">!{data.newPrice+' р.'}</b></span>
        else
          <span><b style="color: #f1084f;">!{data.newPrice+' р.'}</b></span>

      </p>
    </a>
  </td>
  
mixin buy
  <table width="100%" cellpadding="0" cellspacing="0" border="0">
    <tr>
      <td>
        <a style="display: block; margin: 15px auto 30px; width: 174px; background: #ffffff; border: 1px solid #000000; color: #000000; height: 36px; font-size: 16px; text-decoration: none; line-height: 36px; text-align: center;" href=!{"https://monacomoda.com/"+global.utm} target="_blank">КУПИТЬ</a>
      </td>
    </tr>
  </table>

mixin link(href, value)
  a(href=href target='_blank' style='color: #0cb224; text-decoration: none; font-weight: bold;')=value